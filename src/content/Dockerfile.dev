# Development Dockerfile with full debugging tools
FROM eclipse-temurin:17-jdk-jammy AS dev

# Install comprehensive debugging and development tools
RUN apt-get update && apt-get install -y \
    # Network tools
    curl \
    wget \
    netcat-openbsd \
    net-tools \
    iputils-ping \
    telnet \
    traceroute \
    nmap \
    tcpdump \
    # Text editors
    vim \
    nano \
    # System monitoring
    htop \
    iotop \
    procps \
    lsof \
    strace \
    # Development tools
    git \
    jq \
    tree \
    zip \
    unzip \
    tar \
    gzip \
    # Database clients
    postgresql-client \
    redis-tools \
    # Build tools
    build-essential \
    # Security tools
    openssh-client \
    ca-certificates \
    # Cleanup
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user with sudo access
RUN groupadd -r appuser && useradd -r -g appuser -s /bin/bash appuser
RUN apt-get update && apt-get install -y sudo && echo "appuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set working directory
WORKDIR /app

# Copy application
COPY target/*.jar app.jar

# Change ownership
RUN chown appuser:appuser app.jar

# Switch to non-root user
USER appuser

# Expose ports
EXPOSE 8080 5005

# Environment variables for debugging
ENV JAVA_OPTS="-Xmx1g -Xms512m -XX:+UseG1GC -XX:+UseContainerSupport -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/actuator/health || exit 1

# Run application
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]
